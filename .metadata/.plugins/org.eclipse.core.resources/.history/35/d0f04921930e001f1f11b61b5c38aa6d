	<select id="selectAllGymWithAsso" resultMap="gymResultMap">
        SELECT
            g.gymId,
            g.name,
            g.address,
            g.longitude,
            g.latitude,
            g.phone,
            g.content,
            g.type,
            g.operationHours,
            g.closedDay,
            g.gymImgUrl,
            g.capacity,
            g.rating,
            g.createdDate,
            g.modifiedDate,
            a.amenityId,
            a.freeParking,
            a.paidParking,
            a.allDay,
            a.showerFacilities,
            a.sportsWear,
            a.sharedLocker,
            a.personalLocker,
            a.unmanded,
            c.classId,
            c.trainorId,
            c.name,
            c.startDate,
            c.endDate,
            c.createdDate,
            c.minimum,
            c.current,
            c.maximum,
            c.price,
            m.infoId,
            m.machineCount,
            m.machineName
        FROM gym g
        LEFT JOIN gym_machine m ON g.gymId = m.gymId
        LEFT JOIN amenity a ON g.gymId = a.gymId
        LEFT JOIN class c ON g.gymId = c.gymId
        LEFT JOIN prices p ON g.gymId = p.gymId
    </select>
    
    <select id="selectAllGym">
    	SELECT * FROM GYM
    </select>


